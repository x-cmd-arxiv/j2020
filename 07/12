 compact sets.\n","versions":[{"version":"v1","created":"Sun, 12 Jul 2020 14:53:30 GMT"},{"version":"v2","created":"Sat, 3 Oct 2020 15:32:56 GMT"},{"version":"v3","created":"Wed, 16 Dec 2020 19:44:38 GMT"}],"update_date":"2021-01-26"}
