s battery\nlimitations.\n","versions":[{"version":"v1","created":"Mon, 2 Mar 2020 08:37:07 GMT"},{"version":"v2","created":"Sun, 29 Mar 2020 07:02:13 GMT"},{"version":"v3","created":"Sat, 27 Jun 2020 13:58:06 GMT"},{"version":"v4","created":"Mon, 16 Nov 2020 19:29:48 GMT"}],"update_date":"2020-11-18"}
