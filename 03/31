proposed method.\n","versions":[{"version":"v1","created":"Mon, 30 Mar 2020 17:59:18 GMT"},{"version":"v2","created":"Fri, 17 Jul 2020 11:16:27 GMT"},{"version":"v3","created":"Sat, 1 Aug 2020 10:59:30 GMT"}],"update_date":"2020-08-04"}
