ral resolutions.\n","versions":[{"version":"v1","created":"Mon, 30 Mar 2020 10:47:18 GMT"},{"version":"v2","created":"Sat, 2 May 2020 09:11:03 GMT"}],"update_date":"2020-07-21"}
