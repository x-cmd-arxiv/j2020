ale calculations.\n","versions":[{"version":"v1","created":"Mon, 30 Mar 2020 11:18:57 GMT"},{"version":"v2","created":"Tue, 7 Apr 2020 04:20:39 GMT"},{"version":"v3","created":"Sun, 5 Jul 2020 02:00:22 GMT"}],"update_date":"2020-11-11"}
