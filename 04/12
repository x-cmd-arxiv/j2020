ce through self-organization.\n","versions":[{"version":"v1","created":"Sat, 11 Apr 2020 21:02:45 GMT"},{"version":"v2","created":"Thu, 4 Jun 2020 15:36:46 GMT"},{"version":"v3","created":"Wed, 2 Sep 2020 17:10:21 GMT"}],"update_date":"2020-09-03"}
