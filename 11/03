he emotion classification.\n","versions":[{"version":"v1","created":"Tue, 3 Nov 2020 10:01:44 GMT"},{"version":"v2","created":"Wed, 4 Nov 2020 08:05:43 GMT"}],"update_date":"2020-11-05"}
