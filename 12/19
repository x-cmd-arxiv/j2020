sed heterostructures in\nnonequilibrium conditions.\n","versions":[{"version":"v1","created":"Fri, 18 Dec 2020 18:34:49 GMT"},{"version":"v2","created":"Thu, 18 Mar 2021 14:24:22 GMT"},{"version":"v3","created":"Mon, 31 May 2021 08:10:47 GMT"},{"version":"v4","created":"Wed, 4 Aug 2021 12:42:40 GMT"},{"version":"v5","created":"Wed, 17 Nov 2021 10:46:51 GMT"}],"update_date":"2021-11-18"}
