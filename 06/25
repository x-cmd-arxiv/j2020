imental setups exploiting a\nsynthetic dimension.\n","versions":[{"version":"v1","created":"Wed, 24 Jun 2020 16:45:38 GMT"},{"version":"v2","created":"Sun, 28 Jun 2020 19:25:24 GMT"},{"version":"v3","created":"Sun, 13 Dec 2020 17:19:45 GMT"}],"update_date":"2020-12-15"}
