lean data.\n","versions":[{"version":"v1","created":"Sat, 8 Aug 2020 22:21:24 GMT"},{"version":"v2","created":"Mon, 5 Oct 2020 21:04:46 GMT"},{"version":"v3","created":"Wed, 7 Oct 2020 20:04:38 GMT"},{"version":"v4","created":"Mon, 30 Nov 2020 20:09:42 GMT"}],"update_date":"2020-12-02"}
